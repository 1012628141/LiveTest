<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.readyidu.mapper.PhoneDeviceMapper">
    <select id="selectDeviceIdByUserId" parameterType="java.lang.Integer" resultType="java.lang.String">
        select
        device_id
        from
        t_phone_device
        where
        user_id = #{userId}
        and
        t1.is_delete != 1
    </select>
    <update id="delete" parameterType="java.lang.Integer">
        update t_phone_device
        set
        is_delete = 1
        where userId = #{userId}
    </update>
    <select id="getCountByDeviceId" parameterType="java.lang.String" resultType="java.lang.Integer">
        select
        count(*)
        from
        t_phone_device
        where
        device_id = #{deviceId}
        and
        t1.is_delete != 1
    </select>
    <insert id="insertPhoneDevice" parameterType="com.readyidu.model.PhoneDevice">
        INSERT INTO t_phone_device (device_id,create_time,user_id) VALUES (#{deviceId},now(),#{userId})
    </insert>
</mapper>